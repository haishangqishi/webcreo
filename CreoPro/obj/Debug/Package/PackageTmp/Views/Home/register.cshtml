@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>齿轮滚刀系统</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href='../../Content/css/bootstrap.min.css' rel='stylesheet'>
    <link href="../../Content/css/paraInput.css" rel="stylesheet">
    <link href="../../Content/css/memDetial.css" rel="stylesheet">
    <!-- 引用bootstrap时必须引用jquery -->
    <script src="../../Scripts/jquery.min.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="../../Scripts/register.js" type="text/javascript"></script>
    <link rel="shortcut icon" href="../../Content/images/favicon.ico">
</head>
<body>
    <div class="row">
        <div class="box col-md-8 center register-box">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2 class="h-blue">
                        <i class="glyphicon glyphicon-edit"></i>游客名片</h2>
                </div>
                <div id="memDiv" class="box-content" style="height: 370px; display: block">
                    <form id="memForm" action="" method="post" role="form">
                    <div class="col-lg-10 col-sm-10 center">
                        <div class="form-group col-md-5">
                            <label for="txtusername" class="blue-label">
                                用户名</label><span id="usernameRight" class="warn">用户已存在！</span>
                            <input type="text" class="form-control blue-input" id="txtusername" name="txtusername"
                                placeholder="用户名">
                        </div>
                        <div class="form-group col-md-5">
                            <label for="txtpwd" class="blue-label">
                                密码</label>
                            <input type="password" class="form-control blue-input" id="txtpwd" name="txtpwd"
                                placeholder="密码">
                        </div>
                    </div>
                    <div class="col-lg-10 col-sm-10 center">
                        <div class="form-group col-md-5">
                            <label for="txtphone" class="blue-label">
                                电话</label>
                            <input type="text" class="form-control blue-input" id="txtphone" name="txtphone"
                                placeholder="电话">
                        </div>
                        <div class="form-group col-md-5">
                            <label for="txtemail" class="blue-label">
                                邮箱</label>
                            <input type="email" class="form-control blue-input" id="txtemail" name="txtemail"
                                placeholder="邮箱">
                        </div>
                    </div>
                    <div class="col-lg-10 col-sm-10 center">
                        <div class="form-group col-md-10">
                            <label for="txtcreoSetup" class="blue-label">
                                Creo安装路径</label>
                            <input type="text" class="form-control blue-input" id="txtcreoSetup" name="txtcreoSetup"
                                placeholder="如：D:\creo2.0\Creo 2.0\Parametric\bin\parametric.exe">
                        </div>
                    </div>
                    @*<div class="col-lg-10 col-sm-10 center">
                        <div class="form-group col-md-10">
                            <label for="txtcreoWorkSpace" class="blue-label">
                                Creo工作目录</label>
                            <input type="text" class="form-control blue-input" id="txtcreoWorkSpace" name="txtcreoWorkSpace"
                                placeholder="如：D:\creo2.0Save">
                        </div>
                    </div>*@
                    <div class="col-lg-10 col-sm-10 center">
                        <p class="col-md-10 right">
                            <a id="btnCancle" href="/Home/login" class="btn btn-primary">返回</a>
                            <button id="addMem" type="submit" class="btn btn-primary">
                                保存</button>
                        </p>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- 模态框 starts -->
    @RenderPage("../mainForm/modal.cshtml")
    <!-- 模态框 ends -->
</body>
</html>
