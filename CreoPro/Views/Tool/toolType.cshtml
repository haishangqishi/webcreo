@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>刀具类型</title>
    <script src="../../Scripts/jquery.min.js" type="text/javascript"></script>
    <script src="../../Scripts/toolType.js" type="text/javascript"></script>
</head>
<body>
    <!-- 工具条 starts -->
    @RenderPage("../mainForm/top.cshtml")
    <!-- 工具条 ends -->
    <div class="ch-container">
        <div class="row">
            <!-- 左菜单 starts -->
            @RenderPage("../mainForm/left.cshtml")
            <!-- 左菜单 ends -->
            <!-- 内容页 starts-->
            <div id="content" class="col-lg-10 col-sm-10">
                <div>
                    <ul class="mybreadcrumb">
                        <li><a href="#">机床管理</a></li>
                        <li><a href="/Tool/toolType">刀具类型</a></li>
                    </ul>
                </div>
                <!-- 工艺、刀具列表 starts-->
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">
                                <h2 class="h-blue">
                                    <i class="glyphicon glyphicon-edit"></i>刀具供应商</h2>
                                <div class="box-icon">
                                    <a href="#" id="toolList_aMin" class="btn btn-minimize btn-round btn-default"><i
                                        id="toolList_iMin" class="glyphicon glyphicon-chevron-up"></i></a>
                                </div>
                            </div>
                            <div id="toolListDiv" style="display: block">
                                <div class="box-content">
                                    <table class="table table-striped table-bordered responsive">
                                        <thead>
                                            <tr>
                                                <th>
                                                    工艺
                                                </th>
                                                <th>
                                                    刀具类型
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="toolListBody">
                                            @foreach (var procTool in ViewBag.list)
                                            {
                                                <tr>
                                                    <td>
                                                        @procTool.procName
                                                    </td>
                                                    <td>
                                                        <form action="/Tool/getToolSet" method="post" class="hi-form">
                                                        <a href="" class="td-tool">@procTool.toolName</a>
                                                        <input name="txtToolName" type="text" class="hidden" value="@procTool.toolName" />
                                                        <input name="txtToolId" type="text" class="hidden" value="@procTool.toolId" />
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 工艺、刀具列表 ends-->
            </div>
        </div>
        <!-- 内容页 ends -->
        <!-- 模态框 starts -->
        @RenderPage("../mainForm/modal.cshtml")
        <!-- 模态框 ends -->
    </div>
    <hr>
</body>
</html>
